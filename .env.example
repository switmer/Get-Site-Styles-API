# Get-Site-Styles API Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# API Security
API_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Database (for usage logging - optional, defaults to in-memory)
# DATABASE_URL=postgresql://user:password@localhost:5432/get_site_styles
# DATABASE_URL=sqlite:./usage.db

# Default API Keys (for development)
# In production, manage these through the admin endpoint
ADMIN_API_KEY=admin-key-123
DEFAULT_API_KEYS=demo-key-1,demo-key-2,demo-key-3

# CORS Configuration
CORS_ORIGIN=*
# CORS_ORIGIN=https://your-frontend-domain.com,http://localhost:3000

# Logging
LOG_LEVEL=info 